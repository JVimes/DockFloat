<UserControl x:Class="DemoApp.DummyContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DemoApp"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Opacity="0.6">
    <Border BorderBrush="#D00" BorderThickness="1" Padding="5" Margin="2" CornerRadius="10"
                Background="#4F00">
        <StackPanel>
            <TextBlock Text="{Binding Text, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:DummyContent}}}"
                       Foreground="#D00" TextWrapping="Wrap" FontSize="10"/>
        </StackPanel>
    </Border>
</UserControl>
