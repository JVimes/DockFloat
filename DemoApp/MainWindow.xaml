<Window x:Class="DemoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoApp"
        xmlns:df="clr-namespace:DockFloat;assembly=DockFloat"
        mc:Ignorable="d"
        Title="Demo" Height="350" Width="525">
    <DockPanel>
        <df:Dock DockPanel.Dock="Left">
            <TextBlock Background="LightBlue" Text="Tool panel 1" Grid.Column="1" MinWidth="120"/>
        </df:Dock>
        <df:Dock Grid.Column="2" DockPanel.Dock="Right">
            <TextBlock Background="LightGreen" Text="Tool panel 2" Grid.Column="1" MinWidth="120"/>
        </df:Dock>
        <TextBlock Background="LightYellow" Text="Main UI" Grid.Column="1"/>
    </DockPanel>
</Window>
