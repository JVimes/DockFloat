<Window x:Class="DemoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoApp"
        xmlns:df="clr-namespace:DockFloat;assembly=DockFloat"
        mc:Ignorable="d"
        Title="Demo" Height="350" Width="525">
    <DockPanel>
        <df:Dock DockPanel.Dock="Left" Background="SkyBlue" Width="120">
            <local:DummyContent Text="Default dock (button overlaps content). Dock background applies to floating window, as well."/>
        </df:Dock>
        <df:Dock Grid.Column="2" DockPanel.Dock="Right" Width="130.5" FloatButtonOverContent="False" Background="LightGreen">
            <local:DummyContent Text="FloatButtonOverContent is False"/>
        </df:Dock>
        <df:Dock DockPanel.Dock="Bottom" Height="75" Background="PaleGoldenrod" FloatButtonOverContent="False">
            <local:DummyContent Text="FloatButtonOverContent is False, and panel is wide, so extra space is on the right instead of top (when docked)."/>
        </df:Dock>
        <TextBlock Text="Main UI" Background="LightGray"/>
    </DockPanel>
</Window>
